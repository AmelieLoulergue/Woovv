<div class="opening-hours col-md-10">
  <%= form_with model:@availability, url: coworking_manager_coworking_path(@coworking.id), method: :patch, local: true do |form| %>
    <div class="cafe">
      <div class="Week-end-hours col-md-6">
        <h5> Semaine : </h5>
        <%= form.label :is_open_monday, "lundi" %>
        <%= form.check_box :is_open_monday, value: @availability.is_open_monday %>
        <%= form.label :is_open_tuesday, "mardi" %>
        <%= form.check_box :is_open_tuesday, value: @availability.is_open_tuesday %>
        <%= form.label :is_open_wednesday, "mercredi" %>
        <%= form.check_box :is_open_wednesday, value: @availability.is_open_wednesday %>
        <%= form.label :is_open_thursday, "jeudi" %>
        <%= form.check_box :is_open_thursday, value: @availability.is_open_thursday %>
        <%= form.label :is_open_friday, "vendredi" %>
        <%= form.check_box :is_open_friday, value: @availability.is_open_friday %>
      </div>
      <div class="Week-end-hours col-md-6">
        <h5> Week-end : </h5>
        <%= form.label :is_open_saturday, "samedi" %>
        <%= form.check_box :is_open_saturday, value: @availability.is_open_saturday %>
        <%= form.label :is_open_sunday, "dimanche" %>
        <%= form.check_box :is_open_sunday, value: @availability.is_open_sunday %>
      </div>
    </div>
    <%= form.submit "enregistrer" , class:"btn btn-primary" %>
  <% end %>
</div>
