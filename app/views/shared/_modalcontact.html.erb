<div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Formulaire de contact</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model:@contact, url:contacts_path, method: :post, local:true do |form|%>
          <div class="form-contact">
            <p>On revient vers vous très vite, promis ! </p>
            <div class="form-contact field">
              <%= form.label :email, "Votre email" %>
              <%= form.email_field :email %>
            </div>
            <div class="form-contact field">
              <%= form.label :object, "Object de votre email" %>
              <%= form.text_field :object %>
            </div>
            <div class="form-contact field">
              <%= form.label :content, "Dites-nous tout !" %>
              <%= form.text_area :content %>
            </div>
            <div>
              <%= form.submit "Envoyer", class:"btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <%# <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-success">Envoyer<i class="fas fa-paper-plane-o ml-1"></i></button>
      </div> %>
    </div>
  </div>
</div>
