<div class = "wrapper">
  <h1 class="cw-title"> <%= @coworking.name %> </h1>
  <div>
    <h5 class="cw-localisation">
      <u> <%= @coworking.address %>, <%= @coworking.city %> </u>
    </h5>
  </div>
  <button type="button" class="btn btn-outline-danger button-back">
    <%= link_to 'Back', coworkings_path, class:"btn btn-danger" %>
  </button>
  <%if @coworking.coworking_pictures.attached?%>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <%@coworking.coworking_pictures.each do |picture|%>
          <% if picture.id == @coworking.coworking_pictures.first.id %>
            <div class="carousel-item active">
              <%=link_to coworking_coworking_picture_path(@coworking, picture), :method => :delete do%>
                <%= image_tag picture, alt: 'picture' %>
              <%end%>
            </div>
          <%else%>
            <div class="carousel-item">
              <%=link_to coworking_coworking_picture_path(@coworking, picture), :method => :delete do%>
                <%= image_tag picture, alt: 'picture' %>
              <%end%>
            </div>
          <%end%>
        <%end%>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    <%end%>
    <%= form_tag coworking_coworking_pictures_path(@coworking), multipart: true do %>
      <%= file_field_tag :coworking_pictures %>
      <%= submit_tag "Ajouter une photo", class:"btn btn-info" %>
    <% end %>
    <div>
      <div>
        <h5 class="description-title">
          <strong> Description </strong>
        </h5>
